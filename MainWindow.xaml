							<CheckBox Name="Installgog" Content="GOG Galaxy" Margin="5,0"/>
							<CheckBox Name="Installsteam" Content="Steam" Margin="5,0"/>

							<Label Content="Herramientas Pro" FontSize="16" Margin="5,0" FontWeight="Bold"/>
